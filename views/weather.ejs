<%- include("partials/header"); -%>
  <h1>Weather</h1>
  <form class="box" action="/weather" method="post">
    <div class="form-group">
    <label>City Name</label>
    <input class="form-control" type="text" name="city">
    </div>
    <button type="submit" class="btn btn-primary" name="button">Go</button>
  </form>

<% weathers.forEach(function(weather){ %>
    <h1>City: <%=weather.city;%> </h1>
    <img src="<%=weather.image%>">
    <h1>Temperature: <%=weather.temp;%>°F</h1>
    <h1>Weather Description: <%=weather.weatherDescription;%></h1>
    <h1>Humidity: <%=weather.humidity;%>%</h1>
    <h1>Wind Direction: <%=weather.windDirection;%>°</h1>
    <% })%>

<%- include("partials/footer");-%>